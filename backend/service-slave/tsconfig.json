{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",

    "outDir": "./dist",
    "rootDir": "./src",

    "lib": ["es2023"],
    "types": ["bun", "node"],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
